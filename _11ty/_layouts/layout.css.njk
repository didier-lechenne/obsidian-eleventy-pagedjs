---
permalink: "_11ty/assets/themes/{{ config.theme }}/css/print/layout.css"
eleventyExcludeFromCollections: true
---
{%- set opts = layoutOptions -%}
@page {
        --g-column-count: 1;
        --g-column-offset: 0;
        --g-column-gutter: 3mm;
        --g-row-count: 1;
        --g-row-offset: 0;
        --g-row-gutter: 3mm;

        size: {{ opts.width }}mm {{ opts.height }}mm;

        margin-top: {{ opts.margin_top }}mm;
        margin-bottom: {{ opts.margin_bottom }}mm;
        margin-left: {{ opts.margin_left }}mm;
        margin-right: {{ opts.margin_right }}mm;

        {% if opts.bleed %}bleed: 6mm;{% endif %}
        {% if opts.marks %}marks: crop;{% endif %}

        @footnote {
          float: bottom;
        }
    }

    @page:left {
        margin-top: {{ opts.page_left_margin_top }}mm;
        margin-bottom: {{ opts.page_left_margin_bottom }}mm;
        margin-left: {{ opts.page_left_margin_left }}mm;
        margin-right: {{ opts.page_left_margin_right }}mm;
    }

    @page:right {
        margin-top: {{ opts.page_right_margin_top }}mm;
        margin-bottom: {{ opts.page_right_margin_bottom }}mm;
        margin-left: {{ opts.page_right_margin_left }}mm;
        margin-right: {{ opts.page_right_margin_right }}mm;
    }

    @page:left{
      @left-top {
        content: counter(page);
        text-align: left;
        margin-left: 10mm;
        font-family: var(--note);
        font-size: var(--labeur-size);
        display: var(--folio, block);
      }		
    }

    @page:right{
      @right-top {
        content: counter(page);
        text-align: right;
        margin-right: 10mm;
        font-family: var(--note);
        font-size: var(--labeur-size);
        display: var(--folio, block);
      }		
    }

  @page clean {
	@left-top {
	  display: none; /* supprime le folio */
	}
	@right-top {
	  display: none; /* supprime le folio */
	}
   }